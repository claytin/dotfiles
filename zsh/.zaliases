# keyboard layouts on X
alias skus="setxkbmap -layout us -variant alt-intl"
alias skbr="setxkbmap -layout br -variant abnt2"

# "quick dir nav (needs autocd on)
alias ...="../.."
alias ....="../../.."

# listing
alias ls='ls --color=auto --group-directories-first --time-style=+"%d-%m-%Y %H:%M" -F'
alias l='ls'
alias ll="ls -l"
alias la="ls -A"
alias lh="ls -hlA"

# grep
alias grep="grep --color=auto"

# vim
alias vi="nvim"
alias vim="nvim"

# misc
alias j="jobs -l"
alias df="df -h"     # human-readable sizes
alias free="free -m" # size in MB

# better cp behavior
alias cp="cp -i" # asks before overriting

# git
alias gstat="git status"
alias gbran="git branch"
alias gcmmt="git commit"
alias gpull="git pull"
alias gpush="git push"
alias gcout="git checkout"
alias gmrg="git merge"
alias gdiff="git diff"
alias gclo="git clone"
alias gcko="git checkout"
alias gadd="git add"
alias glog="git log"
