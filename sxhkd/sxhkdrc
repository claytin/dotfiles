#
# bspwm hotkeys
#

# quit bspwm-session
ctrl + alt + x
     bspc quit

# close focused window
ctrl + alt + q
     bspc node -c

shift + alt + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

# move windows around on current layout
shift + alt + {h,j,k,l}
	bspc node -s {west,south,north,east}

# focus (cycle) windows
alt + {j,k}
     bspc node -f {next,prev}

# cycle leafs of current layout
ctrl + alt + {comma,period}
     bspc desktop -f {next,prev}

# set preselection
ctrl + alt + {h,j,k,l,space}
     bspc node -p {west,south,north,east,cancel}

# resize
shift + alt + {Left,Down,Up,Right}
     bspc window -e {left -10,down +10,up -10,right +10}

ctrl + alt + {Left,Down,Up,Right}
     bspc window -e {right -10,up +10,down -10,left +10}

# goes to selected desktop
alt + {1-9,0}
     bspc desktop -f ^{1-9,10}

# moves window to the Nth desktop
shift + alt + {1-9,0}
     bspc node -d ^{1-9,10}

# mouse actions
~button1
     bspc pointer -g focus

alt + button{1-3}
     bspc pointer -g {move,resize_side,resize_corner}

alt + @button{1-3}
     bspc pointer -u

#
# wm independent hotkeys
#

# super + Return
ctrl + alt + t
     termite -e "zsh -c tmux"

ctrl + alt + u
     termite

ctrl + alt + f
     thunar

ctrl + alt + m
     termite --class=Ncmpcpp -e ncmpcpp

ctrl + alt + a
     termite --class=Alsamixer -e alsamixer

ctrl + alt + c
     termite --class=Htop -e htop

alt + F2
     $XDG_CONFIG_HOME/dmenu/dmenu-bind

# make sxhkd reload its configuration files:
ctrl + alt + y
     pkill -USR1 -x sxhkd
